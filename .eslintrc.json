{
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "plugins": ["react"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "no-console": ["error", { "allow": ["warn", "error"] }] 
    },
    "overrides": [
      {
        "files": ["*.js", "*.jsx"], 
        "rules": {
          "no-console": "error" 
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect" 
      }
    }
  }
  